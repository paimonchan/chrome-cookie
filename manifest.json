{
    "name"                  : "Paimon Cookie",
    "description"           : "Get cookie from your favorite website",
    "version"               : "1.0",
    "manifest_version"      : 3,
    "permissions"           : [
        "tabs",
        "cookies"
    ],
    "host_permissions"      : [
        "https://*/*"
    ],
    "action"                : {
        "default_icon"      : "/src/asset/icon.png",
        "default_popup"     : "/src/html/main.html"
    } 
  }